<!Doctype.html>
<html>
<head>

</head>
<body>
    <div class="container">
        <div class="card col-md-6">
            <div class="card-header">Modifier Client</div>
            <div class="card-body">
                <form action="/client/update/@Model.id_client" method="post">
                    <div asp-validation-summary="All" style="color:red"></div>
                    <input type="hidden" value="@Model.id_client">
                    <div class="form-group mt-2">
                        <label>Username</label>
                        <input type="text" name="username" class="form-control" value="@Model.username"/>
                    </div>

                    <div class="form-group mt-2">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" value="@Model.email" />
                    </div>
                    <div class="form-group mt-2">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" value="@Model.password"/>
                    </div>
                   
                    <div class="form-group mt-2">
                        <button type="submit" class="btn btn-primary">Modifier Client</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>